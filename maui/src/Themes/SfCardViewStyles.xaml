<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cards="clr-namespace:Syncfusion.Maui.Toolkit.Cards"
             x:Class="Syncfusion.Maui.Toolkit.Cards.SfCardViewStyles">

    <Style TargetType="cards:SfCardView">
        <Setter Property="BorderColor" Value="{DynamicResource SfCardViewBorderColor}"/>
        <Setter Property="IndicatorColor" Value="{DynamicResource SfCardViewIndicatorColor}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource SfCardViewCornerRadius}"/>
    </Style>

</ResourceDictionary>